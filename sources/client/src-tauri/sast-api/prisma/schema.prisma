datasource db {
    provider = "sqlite"
    url      = "file:../../dev.sqlite"
}

generator client {
    provider = "cargo prisma"
    output   = "../src/prisma.rs"
}

model Project {
    id           String        @id @default(uuid())
    name         String
    created_at   DateTime      @default(now())
    updated_at   DateTime      @updatedAt
    placeholders Placeholder[]
    task_sets    TaskSet[]
}

model Placeholder {
    id         String  @id @default(uuid())
    name       String
    value      String
    project    Project @relation(fields: [project_id], references: [id])
    project_id String
}

model TaskSet {
    id         String  @id @default(uuid())
    name       String
    tasks      Task[]
    project    Project @relation(fields: [project_id], references: [id])
    project_id String
}

model Task {
    id                String  @id @default(uuid())
    command           String
    working_directory String
    delay             Int
    task_set          TaskSet @relation(fields: [task_set_id], references: [id])
    task_set_id       String
}
