{
    "name": "ssp",
    "placeholders": {
        "sspWindowName": "ssp",
        "sspPath": "C:/Repos/selfserviceportal/Sources"
    },
    "tasks": [
        {
            "flags": ["m"],
            "workingDirectory": "{sspPath}/mongodb",
            "command": "yarn install; yarn migrate-mongo up -f ./dev.core.js"
        },
        {
            "terminalWindow": "{sspWindowName}",
            "tabTitle": "App.Admin",
            "workingDirectory": "{sspPath}/App.Admin",
            "command": "yarn serve"
        },
        {
            "terminalWindow": "{sspWindowName}",
            "tabTitle": "App",
            "workingDirectory": "{sspPath}/App",
            "command": "yarn dev"
        },
        {
            "workingDirectory": "{sspPath}",
            "command": "dotnet build"
        },
        {
            "terminalWindow": "{sspWindowName}",
            "tabTitle": "Web.Admin",
            "workingDirectory": "{sspPath}/Web.Admin",
            "command": "dotnet run --no-build"
        },
        {
            "terminalWindow": "{sspWindowName}",
            "tabTitle": "Web",
            "workingDirectory": "{sspPath}/Web",
            "command": "dotnet run --no-build"
        }
    ]
}
